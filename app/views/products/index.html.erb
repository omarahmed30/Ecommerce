<div class="container">

    <div class="container-fluid bg-3 text-center">    
        <h3>I am at the index page in PRODUCTS directory</h3><br>
        <div class="row">
            <% @products.each do |p| %>
                <div class="col-sm-3">
                    <p>Some text..</p>
                    <a href="oneitem/<%= p.id %>"> <img src="<%= p.image %>"  class="img-responsive"  style="width:100%" alt="Image"></a>
                </div>
            <% end %>
        </div>
    </div>
    </div><br>
</div>


<% if @products.blank? %>
  <h4>There are no products containing the term <%= params[:search] %>.</h4>
<% end %>